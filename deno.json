{
  "name": "@gander-tools/mikrus",
  "version": "0.1.0",
  "description": "Command-line interface tool for managing VPS servers on mikr.us platform (Deno + Cliffy)",
  "license": "MIT",
  "engines": {
    "deno": ">=2.4.0"
  },
  "keywords": [
    "cli",
    "vps",
    "mikr.us",
    "server-management",
    "hosting",
    "deno",
    "cliffy"
  ],
  "author": {
    "name": "Adam GÄ…sowski",
    "url": "https://github.com/gander"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gander-tools/mikrus.git"
  },
  "homepage": "https://github.com/gander-tools/mikrus#readme",
  "bugs": {
    "url": "https://github.com/gander-tools/mikrus/issues"
  },
  "exports": "./mod.ts",
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "publish": {
    "include": [
      "src/",
      "tests/",
      "README.md",
      "LICENSE",
      "mod.ts"
    ],
    "exclude": [
      "tests/**/*.test.ts",
      ".github/",
      "build/",
      "docs/",
      "models/",
      "coverage/"
    ]
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
    "@std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "@std/fs": "https://deno.land/std@0.224.0/fs/mod.ts",
    "@std/testing/asserts": "https://deno.land/std@0.224.0/testing/asserts.ts"
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net src/cli.ts",
    "compile": "deno compile --allow-read --allow-write --allow-net --output=./build/mikrus src/cli.ts",
    "test": "deno test --allow-read --allow-write --allow-env",
    "test:coverage": "deno test --allow-read --allow-write --allow-env --coverage",
    "coverage": "deno coverage coverage/ --lcov --output=coverage.lcov",
    "coverage:html": "deno coverage coverage/ --html",
    "lint": "deno lint src/ tests/",
    "fmt": "deno fmt src/ tests/",
    "fmt:check": "deno fmt --check src/ tests/",
    "check": "deno check src/cli.ts tests/generate-security.test.ts",
    "cache": "deno cache src/cli.ts tests/generate-security.test.ts",
    "info": "deno info src/cli.ts",
    "compile:all": "deno task compile:linux && deno task compile:windows && deno task compile:macos",
    "compile:linux": "deno compile --allow-read --allow-write --allow-net --target=x86_64-unknown-linux-gnu --output=./build/mikrus-linux src/cli.ts",
    "compile:windows": "deno compile --allow-read --allow-write --allow-net --target=x86_64-pc-windows-msvc --output=./build/mikrus-windows.exe src/cli.ts",
    "compile:macos": "deno compile --allow-read --allow-write --allow-net --target=x86_64-apple-darwin --output=./build/mikrus-macos src/cli.ts"
  },
  "exclude": [
    "build/",
    "coverage/",
    "tests/cli-integration.test.ts",
    "tests/security-basic.test.ts",
    "tests/commands-unit.test.ts",
    "tests/cli-unit.test.ts",
    "tests/extensions/",
    "src/commands/mikrus.ts",
    "src/extensions/"
  ]
}
