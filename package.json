{
  "name": "mikrus",
  "version": "0.0.1",
  "description": "Command-line interface tool for managing VPS servers on mikr.us platform",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "mikrus": "bin/mikrus"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean-build": "bunx rimraf -rf ./build",
    "compile": "bunx tsc -p .",
    "copy-templates": "bunx cpy 'src/templates/*' build/templates",
    "build": "bun run clean-build && bun run compile && bun run copy-templates",
    "prepublishOnly": "bun run build",
    "format": "bunx biome format --write .",
    "lint": "bunx biome lint .",
    "check": "bunx biome check .",
    "check:fix": "bunx biome check --write .",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest",
    "test:ui": "bunx vitest --ui",
    "test:coverage": "bunx vitest run --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "^5.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cpy-cli": "^6.0.0",
    "lefthook": "^1.12.3",
    "rimraf": "^6.0.1",
    "tdd-guard-vitest": "^0.1.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  }
}
