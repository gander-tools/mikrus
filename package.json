{
  "name": "mikrus",
  "version": "0.0.1",
  "description": "Command-line interface tool for managing VPS servers on mikr.us platform",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "mikrus": "bin/mikrus"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean-build": "./node_modules/.bin/rimraf -rf ./build",
    "compile": "./node_modules/.bin/tsc -p .",
    "copy-templates": "./node_modules/.bin/cpy 'src/templates/*' build/templates",
    "build": "bun run clean-build && bun run compile && bun run copy-templates",
    "prepublishOnly": "bun run build",
    "format": "./node_modules/.bin/biome format --write .",
    "lint": "./node_modules/.bin/biome lint .",
    "check": "./node_modules/.bin/biome check .",
    "check:fix": "./node_modules/.bin/biome check --write .",
    "test": "./node_modules/.bin/vitest run",
    "test:watch": "./node_modules/.bin/vitest",
    "test:ui": "./node_modules/.bin/vitest --ui",
    "test:coverage": "./node_modules/.bin/vitest run --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "^5.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cpy-cli": "^6.0.0",
    "lefthook": "^1.12.3",
    "rimraf": "^6.0.1",
    "tdd-guard-vitest": "^0.1.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  }
}
