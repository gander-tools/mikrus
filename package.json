{
  "name": "mikrus",
  "version": "0.0.1",
  "description": "Command-line interface tool for managing VPS servers on mikr.us platform",
  "private": false,
  "types": "build/types/types.d.ts",
  "bin": {
    "mikrus": "bin/mikrus"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "cpy 'src/templates/*' build/templates",
    "build": "bun run clean-build && bun run compile && bun run copy-templates",
    "prepublishOnly": "bun run build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gander-tools/mikrus.git"
  },
  "homepage": "https://github.com/gander-tools/mikrus#readme",
  "bugs": {
    "url": "https://github.com/gander-tools/mikrus/issues"
  },
  "author": {
    "name": "Adam GÄ…sowski",
    "url": "https://github.com/gander"
  },
  "keywords": [
    "cli",
    "vps",
    "mikr.us",
    "server-management",
    "hosting"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "dependencies": {
    "gluegun": "^5.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cpy-cli": "^6.0.0",
    "js-yaml": "^4.1.0",
    "lefthook": "^1.12.3",
    "rimraf": "^6.0.1",
    "tdd-guard-vitest": "^0.1.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "cross-spawn": "^7.0.5",
    "semver": "^7.6.3",
    "axios": "^1.7.9",
    "ejs": "^3.1.10",
    "lodash": "^4.17.21",
    "lodash.trim": "4.5.1",
    "lodash.trimend": "4.5.1"
  }
}
