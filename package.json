{
  "name": "mikrus",
  "version": "0.0.1",
  "description": "Command-line interface tool for managing VPS servers on mikr.us platform",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "mikrus": "bin/mikrus"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "cpy ./src/templates/* ./build/templates",
    "build": "yarn clean-build && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "^5.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "cpy-cli": "^6.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "biome check --write --staged"
    }
  }
}
